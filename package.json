{
  "name": "react-quick-access",
  "version": "1.0.0",
  "description": "A quick-access (or a launch bar) component inspired by productivity tools like Alfred",
  "main": "index.js",
  "author": "Yanis",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "dev": "webpack-dev-server --config webpack-dev-server.config.js --progress --inline --colors",
    "open-localhost": "node -e 'require(\"opn\")(\"http://localhost:8090/example/index.html\")'",
    "build": "webpack --config webpack-production.config.js --progress --colors && babel lib --out-dir dist-modules",
    "start": "npm-run-all --parallel open-localhost dev"
  },
  "devDependencies": {
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "jest": "^22.0.6",
    "npm-run-all": "^4.1.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.0"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "standard": "^10.0.3",
    "uuid": "^3.1.0"
  }
}
